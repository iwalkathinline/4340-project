<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" >
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" >
    </uses-permission>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.finalproject.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.finalproject.Setup_meeting"
            android:label="@string/title_activity_setup_meeting" >
            <meta-data
                android:name="android.suppport.PARENT_ACTIVITY"
                android:value=".com.finalproject.MainActivity" />
        </activity>
        <activity
            android:name="com.finalproject.SelectAttendees"
            android:label="@string/title_activity_select_attendees" >
            <meta-data
                android:name="android.suppport.PARENT_ACTIVITY"
                android:value=".com.finalproject.MainActivity" />
        </activity>
        <activity
            android:name="com.finalproject.ListPairedDevices"
            android:label="@string/title_activity_list_paired_devices"
            android:parentActivityName="com.finalproject.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.finalproject.MainActivity" />
        </activity>
    </application>

</manifest>